<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.myapplication.viewModel.GameViewModel"/>
        <import type="com.example.myapplication.models.CardEnum"/>
        <import type="com.example.myapplication.R"/>
        <variable
            name="gameViewModel"
            type="com.example.myapplication.viewModel.GameViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Levels"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imgParaula"
            android:layout_width="180dp"
            android:layout_height="232dp"
            app:imageUrl='@{gameViewModel.levelMutableLiveData != null ? gameViewModel.levelMutableLiveData.imageUrl : "https://s3-alpha.figma.com/hub/file/948140848/1f4d8ea7-e9d9-48b7-b70c-819482fb10fb-cover.png"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094"
            />

        <ImageView
            android:id="@+id/l3"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra3)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.591"
            app:imageResource="@{gameViewModel.lletra3 != null ? CardEnum.getCardResource(gameViewModel.lletra3) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l7"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra7)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.799"
            app:imageResource="@{gameViewModel.lletra7 != null ? CardEnum.getCardResource(gameViewModel.lletra7) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l8"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra8)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.794"
            app:imageResource="@{gameViewModel.lletra8 != null ? CardEnum.getCardResource(gameViewModel.lletra8) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l4"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra4)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.591"
            app:imageResource="@{gameViewModel.lletra4 != null ? CardEnum.getCardResource(gameViewModel.lletra4) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l6"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra6)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.37"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgParaula"
            app:layout_constraintVertical_bias="0.783"
            app:imageResource="@{gameViewModel.lletra6 != null ? CardEnum.getCardResource(gameViewModel.lletra6) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l5"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra5)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.799"
            app:imageResource="@{gameViewModel.lletra5 != null ? CardEnum.getCardResource(gameViewModel.lletra5) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l1"
            android:layout_width="68dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra1)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.11"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.591"
            app:imageResource="@{gameViewModel.lletra1 != null ? CardEnum.getCardResource(gameViewModel.lletra1) : R.drawable.x}"/>

        <ImageView
            android:id="@+id/l2"
            android:layout_width="71dp"
            android:layout_height="117dp"
            android:onClick="@{() -> gameViewModel.onClickedAt(gameViewModel.lletra2)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.364"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.591"
            app:imageResource="@{gameViewModel.lletra2 != null ? CardEnum.getCardResource(gameViewModel.lletra2) : R.drawable.x}"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Podras adivinar la segÃ¼ent paraula?"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.615"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <TextView
            android:id="@+id/paraulaEscrita"
            android:layout_width="344dp"
            android:layout_height="65dp"
            android:layout_marginBottom="424dp"
            android:gravity="center"
            android:hint="escriure paraula..."
            android:text='@{gameViewModel.currentWordMutableLiveData ?? ""}'
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.675"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgParaula"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> gameViewModel.comprovarParaula()}"
            android:text="Comprovar paraula"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928" />

        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@={gameViewModel.username}'
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.096" />

        <TextView
            android:id="@+id/xp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@={gameViewModel.xp}'
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.146" />

        <TextView
            android:id="@+id/ratlles"
            android:layout_width="240dp"
            android:layout_height="86dp"
            android:text='@{ gameViewModel.levelMutableLiveData.maskSolution ?? "_ _ _ _ _"}'
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.093"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.41" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:onClick="pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:srcCompat="@drawable/pausa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>